@import '../../../styles/variables.styl';

.nav-panel {
    width: max-content;
    height: 100%;
    font-size: 1.05rem;

    h4 {
        margin: 10px;
        margin-left: 15px;
    }

    .controls {
        margin-left: 20px;
        position: relative;
        margin-right: 10px;

        &:focus-visible {
            .nav-panel-option.selected {
                outline : 2px solid $primary;
            }
        }
    }

    .nav-panel-option {
        user-select: none;
        opacity: 0.7;
        cursor: pointer;
        margin-block: 5px;
        padding-inline: 5px;
        border-radius: 5px;
        height: max-content;
        transition: opacity 0.2s;

        &:hover {
            opacity: 0.9;
        }

        &.selected {
            opacity: 1;
        }
    }

    .indicatorBar {
        position: absolute;
        height: 22px;
        transition: all 0.2s;
        width: 5px;
        background-color: var(--primary);
        left: -10px;
        border-radius: 5px;
        top: 7px;
    }
}
